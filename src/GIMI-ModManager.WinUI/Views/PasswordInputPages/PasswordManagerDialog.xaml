<ContentDialog
    x:Class="GIMI_ModManager.WinUI.Views.PasswordInputPages.PasswordManagerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="using:WinUI3Localizer"
    Title="Password Manager"
    Width="400"
    Height="400"
    CornerRadius="10"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    l:Uids.Uid="/CharactersPage/PasswordManagerDialog">
    <ContentDialog.Resources>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="80" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>
    </ContentDialog.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Padding="10"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="5">
            <GridView
                x:Name="PasswordListView"
                DoubleTapped="PasswordListView_DoubleTapped"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Normal"
                                Text="{Binding DisplayName}" />
                            <TextBlock
                                Grid.Column="1"
                                FontWeight="Normal"
                                Text="{Binding Password}" />
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontWeight="Bold"
                            Text="Display Name"
                            l:Uids.Uid="/CharactersPage/PasswordManager_DisplayNameHeader" />
                        <TextBlock
                            Grid.Column="1"
                            FontWeight="Bold"
                            Text="Password"
                            l:Uids.Uid="/CharactersPage/PasswordManager_PasswordHeader" />
                    </Grid>
                </GridView.Header>
            </GridView>
        </Border>


        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button
                x:Name="AddButton"
                Grid.Row="0"
                Click="AddButton_Click"
                Content="Add"
                Style="{StaticResource BaseButtonStyle}"
                l:Uids.Uid="/CharactersPage/PasswordManager_AddButton" />
            <Button
                x:Name="EditButton"
                Grid.Row="1"
                Click="EditButton_Click"
                Content="Edit"
                Style="{StaticResource BaseButtonStyle}"
                l:Uids.Uid="/CharactersPage/PasswordManager_EditButton" />
            <Button
                x:Name="RemoveButton"
                Grid.Row="2"
                Click="RemoveButton_Click"
                Content="Remove"
                Style="{StaticResource BaseButtonStyle}"
                l:Uids.Uid="/CharactersPage/PasswordManager_RemoveButton" />

            <Button
                x:Name="MoveUpButton"
                Grid.Row="3"
                Click="MoveUpButton_Click"
                Content="▲"
                Style="{StaticResource BaseButtonStyle}" />
            <Button
                x:Name="MoveDownButton"
                Grid.Row="4"
                Click="MoveDownButton_Click"
                Content="▼"
                Style="{StaticResource BaseButtonStyle}" />
        </Grid>
    </Grid>
</ContentDialog>