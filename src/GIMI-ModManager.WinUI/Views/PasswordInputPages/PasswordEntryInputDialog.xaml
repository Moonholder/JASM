<ContentDialog
    x:Class="GIMI_ModManager.WinUI.Views.PasswordInputPages.PasswordEntryInputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:l="using:WinUI3Localizer"
    Title="Enter Password Information"
    CornerRadius="10"
    IsPrimaryButtonEnabled="{Binding Text, ElementName=PasswordTextBox, Converter={StaticResource StringNullOrEmptyToBooleanConverter}}"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    l:Uids.Uid="/CharactersPage/PasswordEntryDialog">

    <StackPanel>
        <TextBlock Text="Display Name (Optional)" l:Uids.Uid="/CharactersPage/PasswordEntryDialog_DisplayNameLabel" />
        <TextBox x:Name="DisplayNameTextBox" />
        <TextBlock Text="Password" l:Uids.Uid="/CharactersPage/PasswordEntryDialog_PasswordLabel" />
        <TextBox x:Name="PasswordTextBox" />
    </StackPanel>
</ContentDialog>