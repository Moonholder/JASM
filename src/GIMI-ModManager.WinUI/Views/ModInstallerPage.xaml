<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GIMI_ModManager.WinUI.Views.ModInstallerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:GIMI_ModManager.WinUI.Views.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="using:WinUI3Localizer"
    xmlns:local="using:GIMI_ModManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:GIMI_ModManager.WinUI.ViewModels"
    mc:Ignorable="d">



    <Page.Resources>

        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <MenuFlyout x:Name="FileFlyout">
            <MenuFlyoutItem
                Command="{x:Bind ViewModel.SetModPreviewImageCommand, Mode=OneWay}"
                CommandParameter="{Binding}"
                Text="Set Mod Preview Image"
                l:Uids.Uid="/ModInstallerPage/SetPreviewImageItem" />
        </MenuFlyout>

        <MenuFlyout x:Name="FolderFlyout">
            <MenuFlyoutItem
                Command="{x:Bind ViewModel.SetRootFolderCommand, Mode=OneWay}"
                CommandParameter="{Binding}"
                Text="Set Mod Root Folder"
                l:Uids.Uid="/ModInstallerPage/SetRootFolderItem" />
            <!--  TODO: Enable Later  -->
            <MenuFlyoutItem
                Command="{x:Bind ViewModel.SetShaderFixesFolderCommand}"
                CommandParameter="{Binding}"
                Text="Set ShaderFixes Folder"
                Visibility="Collapsed"
                l:Uids.Uid="/ModInstallerPage/SetShaderFixesFolderItem" />
        </MenuFlyout>

        <DataTemplate x:Key="RootFolderTemplate" x:DataType="viewModels:RootFolder">
            <TreeViewItem
                DoubleTapped="RootFolder_DoubleClicked"
                IsExpanded="True"
                ItemsSource="{x:Bind FileSystemItems, Mode=OneWay}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Margin="0,0,4,0" Glyph="&#xED25;" />
                    <TextBlock Text="{x:Bind Name}" />
                </StackPanel>
            </TreeViewItem>
        </DataTemplate>

        <DataTemplate x:Key="FileSystemItemTemplate" x:DataType="viewModels:FileSystemItem">
            <TreeViewItem
                IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                IsSelected="{x:Bind IsSelected, Mode=TwoWay}"
                ItemsSource="{x:Bind FileSystemItems, Mode=OneWay}"
                Loaded="FrameworkElement_OnLoaded">
                <Grid DoubleTapped="FileSystemItem_DoubleClicked">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon Margin="0,0,4,0" Glyph="{x:Bind LeftIcon, Mode=OneWay}" />


                    <TextBlock Grid.Column="1" Text="{x:Bind Name}" />


                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <FontIcon Margin="0,0,12,0" Glyph="{x:Bind RightIcon, Mode=OneWay}" />
                    </StackPanel>

                </Grid>
            </TreeViewItem>
        </DataTemplate>


        <local:ExplorerItemTemplateSelector
            x:Key="ExplorerItemTemplateSelector"
            FileSystemItem="{StaticResource FileSystemItemTemplate}"
            RootFolderTemplate="{StaticResource RootFolderTemplate}" />
    </Page.Resources>


    <Grid>
        <ContentDialog
            x:Name="DuplicateModDialog"
            Title="Duplicate Mod Folder Detected"
            CloseButtonText="Cancel"
            DefaultButton="Primary"
            IsPrimaryButtonEnabled="{x:Bind ViewModel.CanExecuteDialogCommand, Mode=OneWay}"
            PrimaryButtonCommand="{x:Bind ViewModel.AddModDialogCommand, Mode=OneWay}"
            PrimaryButtonText="{x:Bind ViewModel.PrimaryButtonText, Mode=OneWay}"
            l:Uids.Uid="/ModInstallerPage/DuplicateModDialog">
            <ContentDialog.Content>
                <Grid MinWidth="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <InfoBar
                        IsClosable="False"
                        IsOpen="True"
                        Message="1. You can choose to overwrite the old mod, deleting it.&#x0a;OR&#x0a;2. You can rename either the new mod or the old mod."
                        Severity="Warning"
                        l:Uids.Uid="/ModInstallerPage/DuplicateModWarning" />

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>


                        <StackPanel Margin="4">
                            <TextBlock Text="New Mod:" l:Uids.Uid="/ModInstallerPage/NewModLabel" />
                            <TextBox
                                Margin="4"
                                Header="Rename"
                                IsEnabled="{x:Bind ViewModel.OverwriteExistingMod, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                PlaceholderText="Custom Name"
                                Text="{x:Bind ViewModel.CustomName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                l:Uids.Uid="/ModInstallerPage/RenameNewModInput" />
                            <TextBox
                                Margin="4"
                                Header="Rename Folder"
                                IsEnabled="{x:Bind ViewModel.OverwriteExistingMod, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                PlaceholderText="Folder Name"
                                Text="{x:Bind ViewModel.ModFolderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                l:Uids.Uid="/ModInstallerPage/RenameNewFolderInput" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="4">
                            <TextBlock Text="Existing Mod:" l:Uids.Uid="/ModInstallerPage/ExistingModLabel" />
                            <TextBox
                                Margin="4"
                                Header="Rename"
                                IsEnabled="{x:Bind ViewModel.OverwriteExistingMod, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                PlaceholderText="Custom Name"
                                Text="{x:Bind ViewModel.DuplicateModCustomName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                l:Uids.Uid="/ModInstallerPage/RenameExistingModInput" />
                            <TextBox
                                Margin="4"
                                Header="Rename Folder"
                                IsEnabled="{x:Bind ViewModel.OverwriteExistingMod, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
                                PlaceholderText="Folder Name"
                                Text="{x:Bind ViewModel.DuplicateModFolderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                l:Uids.Uid="/ModInstallerPage/RenameExistingFolderInput" />
                            <controls:LinkButton 
                                Link="{x:Bind ViewModel.DuplicateModPath, Mode=OneWay}" 
                                Text="Open existing mod folder..." 
                                l:Uids.Uid="/ModInstallerPage/OpenExistingFolderLink" />
                        </StackPanel>

                    </Grid>

                    <StackPanel Grid.Row="2">
                        <CheckBox
                            Margin="4"
                            Content="Overwrite existing mod"
                            IsChecked="{x:Bind ViewModel.OverwriteExistingMod, Mode=TwoWay}"
                            l:Uids.Uid="/ModInstallerPage/OverwriteCheckBox" />

                        <CheckBox
                            Margin="4"
                            Command="{x:Bind ViewModel.ToggleReplaceDuplicateModInPresetCommand}"
                            IsChecked="{x:Bind ViewModel.ReplaceDuplicateModInPreset, Mode=OneWay}"
                            ToolTipService.ToolTip="Duplicate mod will be replaced by the newly installed mod in presets. This option is mutually exclusive with 'Replace old mod in presets' checkbox."
                            l:Uids.Uid="/ModInstallerPage/ReplaceDuplicateInPresetCheckBox">
                            <TextBlock Text="Replace duplicate mod in presets with new mod" TextWrapping="WrapWholeWords" l:Uids.Uid="/ModInstallerPage/ReplaceDuplicateInPresetText" />
                        </CheckBox>
                    </StackPanel>

                </Grid>

            </ContentDialog.Content>
        </ContentDialog>


        <Grid x:Name="ModInstallRoot" Padding="8">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <!--<ScrollViewer Margin="0,0,4,0">-->

            <!--<StackPanel MinWidth="350">-->

            <Grid Height="{x:Bind ModViewColumn.Height, Mode=OneWay}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ToggleButton
                    VerticalAlignment="Top"
                    Command="{x:Bind ViewModel.ToggleAlwaysOnTopCommand}"
                    IsChecked="{x:Bind ViewModel.AlwaysOnTop, Mode=TwoWay}"
                    ToolTipService.ToolTip="Keep window always on top"
                    l:Uids.Uid="/ModInstallerPage/AlwaysOnTopButton">
                    <FontIcon Glyph="&#xE718;" />
                </ToggleButton>
                <controls:CustomImage
                    MinWidth="350"
                    MaxHeight="800"
                    ClearButtonCommand="{x:Bind ViewModel.ClearModPreviewImageCommand}"
                    CopyButtonCommand="{x:Bind ViewModel.CopyImageCommand}"
                    EditButtonCommand="{x:Bind ViewModel.PickImageCommand}"
                    ImageUri="{x:Bind ViewModel.ModPreviewImagePath, Mode=OneWay}"
                    IsContextMenuEnabled="True"
                    PasteButtonCommand="{x:Bind ViewModel.PasteModImageCommand}" />

                <Button
                    Margin="0,0,0,4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Command="{x:Bind ViewModel.ReRetrieveModInfoCommand}"
                    ToolTipService.ToolTip="Retrieve details from mod page"
                    l:Uids.Uid="/ModInstallerPage/RetrieveInfoButton">
                    <Button.Content>
                        <FontIcon Glyph="&#xE72C;" />
                    </Button.Content>
                </Button>

                <ProgressRing
                    Margin="0,0,0,4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    IsActive="{x:Bind ViewModel.IsRetrievingModInfo, Mode=OneWay}" />

                <TextBox
                    Grid.Row="1"
                    Header="Mod Page URL"
                    IsReadOnly="{x:Bind ViewModel.IsRetrievingModInfo, Mode=OneWay}"
                    KeyDown="UrlTextBox_KeyDown"
                    PlaceholderText="Paste URL to autofill preview image etc. (GameBanana only)"
                    Text="{x:Bind ViewModel.ModUrl, Mode=TwoWay}"
                    l:Uids.Uid="/ModInstallerPage/ModUrlInput" />
                <TextBox
                    Grid.Row="2"
                    Header="Custom Mod Name"
                    IsReadOnly="{x:Bind ViewModel.IsRetrievingModInfo, Mode=OneWay}"
                    PlaceholderText="Custom name shown throughout JASM"
                    Text="{x:Bind ViewModel.CustomName, Mode=TwoWay}"
                    l:Uids.Uid="/ModInstallerPage/CustomNameInput" />
                <TextBox
                    Grid.Row="3"
                    Header="Author"
                    IsReadOnly="{x:Bind ViewModel.IsRetrievingModInfo, Mode=OneWay}"
                    Text="{x:Bind ViewModel.Author, Mode=TwoWay}"
                    l:Uids.Uid="/ModInstallerPage/AuthorInput" />
                <TextBox
                    Grid.Row="4"
                    Margin="0,0,0,8"
                    AcceptsReturn="False"
                    Header="Notes"
                    PlaceholderText="Custom free text note shown in character details grid"
                    Text="{x:Bind ViewModel.Description, Mode=TwoWay}"
                    l:Uids.Uid="/ModInstallerPage/DescriptionInput" />
            </Grid>

            <!--</StackPanel>-->
            <!--</ScrollViewer>-->


            <!--
                Folder overview
                Select Root Mod Folder
                Select ShaderFixes
                Select Image
            -->
            <Grid
                x:Name="ModViewColumn"
                Grid.Column="1"
                MinWidth="500">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TreeView
                    x:Name="ModFolderTree"
                    CanDragItems="False"
                    CanReorderItems="False"
                    ItemTemplateSelector="{StaticResource ExplorerItemTemplateSelector}"
                    ItemsSource="{x:Bind ViewModel.RootFolder, Mode=OneWay}" />
                <!--  MinHeight="220"  -->

                <StackPanel
                    x:Name="ModFolderSelectionDetails"
                    Grid.Row="1"
                    Width="{x:Bind ModViewColumn.Width, Mode=OneWay}"
                    VerticalAlignment="Top">

                    <StackPanel Margin="0,8,0,12" Orientation="Horizontal">
                        <FontIcon Margin="4,0" Glyph="{x:Bind ViewModel.RootFolderIcon}" />
                        <TextBlock Margin="4,0" Text="Extract Directory:" l:Uids.Uid="/ModInstallerPage/ExtractDirLabel" />
                        <TextBlock Text="{x:Bind ViewModel.LastSelectedRootFolder.Name, Mode=OneWay, FallbackValue=Unknown}" />
                        <FontIcon Margin="4,0" Glyph="&#xEA62;" />
                        <TextBlock Text="{x:Bind ViewModel.ModCharacterName, Mode=OneWay}" />
                    </StackPanel>




                     <StackPanel Orientation="Horizontal">
                        <FontIcon Margin="4,0" Glyph="{x:Bind ViewModel.SelectedImageIcon}" />
                        <TextBlock Margin="4,0" Text="Preview Image Source:" l:Uids.Uid="/ModInstallerPage/ImageSourceLabel" />
                        <TextBlock Text="{x:Bind ViewModel.ImageSource, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel
                        Margin="0,0,0,8"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                        <CheckBox
                            Content="自动"
                            IsChecked="True"
                            IsEnabled="False" />
                        <CheckBox Content="Url" IsEnabled="False" />
                        <CheckBox Content="模组文件" IsEnabled="False" />
                        <CheckBox Content="忽略" IsEnabled="False" />
                    </StackPanel>

                    <TextBlock
                        Padding="8"
                        HorizontalAlignment="Left"
                        Text="You can set the mod root folder by right-clicking"
                        TextWrapping="WrapWholeWords"
                        l:Uids.Uid="/ModInstallerPage/RightClickRootHint" />

                    <TextBlock
                        Padding="8"
                        HorizontalAlignment="Left"
                        Text="You can set preview image by copy-pasting an image file"
                        TextWrapping="WrapWholeWords"
                        l:Uids.Uid="/ModInstallerPage/PasteImageHint" />

                    <TextBlock
                        Padding="8"
                        HorizontalAlignment="Left"
                        Text="You can also manually select a preview image file from the mod folder on the right"
                        TextWrapping="WrapWholeWords"
                        l:Uids.Uid="/ModInstallerPage/SelectImageHint" />

                    <TextBlock
                        Padding="8"
                        HorizontalAlignment="Left"
                        Text="Usually just pressing 'Add Mod' works fine"
                        TextWrapping="WrapWholeWords"
                        l:Uids.Uid="/ModInstallerPage/AddModHint" />


                    <StackPanel Visibility="Collapsed">

                        <StackPanel Orientation="Horizontal">
                            <FontIcon Margin="4,0" Glyph="{x:Bind ViewModel.SelectedMergeIniIcon}" />
                            <TextBlock Margin="4,0" Text="MergedIniFile Folder:" />
                            <TextBlock Text="自动" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                            <CheckBox
                                Content="自动"
                                IsChecked="True"
                                IsEnabled="False" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <FontIcon Margin="4,0" Glyph="{x:Bind ViewModel.ShaderFixesFolderIcon}" />
                            <TextBlock Margin="4,0" Text="ShaderFixes Folder:" />
                            <TextBlock Text="{x:Bind ViewModel.LastSelectedShaderFixesFolder.Name, Mode=OneWay, FallbackValue=Unknown}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <CheckBox Content="自动" IsEnabled="False" />
                            <CheckBox
                                Content="手动选择"
                                IsChecked="True"
                                IsEnabled="False" />
                            <CheckBox Content="忽略" IsEnabled="False" />
                        </StackPanel>

                    </StackPanel>

                </StackPanel>



                <Grid Grid.Row="2" HorizontalAlignment="Stretch">


                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        Margin="4,0"
                        Command="{x:Bind ViewModel.EnableOnlyToggleCommand}"
                        IsChecked="{x:Bind ViewModel.EnableThisMod, Mode=OneWay}"
                        ToolTipService.ToolTip="This will enable this mod and disable other mods for this character."
                        l:Uids.Uid="/ModInstallerPage/EnableOnlyCheckBox">
                        <TextBlock Text="Enable this mod &amp; disable others?" TextWrapping="NoWrap" l:Uids.Uid="/ModInstallerPage/EnableOnlyText" />
                    </CheckBox>


                    <CheckBox
                        Grid.Column="1"
                        Command="{x:Bind ViewModel.ToggleReplaceModToUpdateInPresetCommand}"
                        Content="Replace mod to update in presets with new mod"
                        IsChecked="{x:Bind ViewModel.ReplaceModToUpdateInPreset, Mode=OneWay}"
                        ToolTipService.ToolTip="This will update the old mod in all presets with the newly installed mod. This checkbox is separate from the one when duplicate mods are detected"
                        Visibility="{x:Bind ViewModel.IsUpdatingMod, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                        l:Uids.Uid="/ModInstallerPage/ReplaceInPresetCheckBox" />

                    <Button
                        Grid.Column="2"
                        Margin="4,0"
                        HorizontalAlignment="Right"
                        Command="{x:Bind ViewModel.AddModCommand}"
                        Content="Add Mod"
                        l:Uids.Uid="/ModInstallerPage/AddModButton">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="S" Modifiers="Control" />
                        </Button.KeyboardAccelerators>
                    </Button>

                </Grid>



            </Grid>


        </Grid>


    </Grid>

</Page>
