<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="JASM.AutoUpdater.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:JASM.AutoUpdater.Helpers"
    xmlns:local="using:JASM.AutoUpdater"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:BoolToVisibleConverter x:Key="BoolToVisibilityConverter" />
        <helpers:BoolToStringConverter x:Key="BoolToStringConverter" />
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter" />
        <helpers:ToStringConverter x:Key="ToStringConverter" />
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>




        <StackPanel VerticalAlignment="Center" Visibility="{x:Bind ViewModel.InStartupView, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock
                Margin="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{ThemeResource TitleTextBlockStyle}"
                Text="JASM 自动更新程序" />
            <TextBlock
                VerticalAlignment="Center"
                IsTextSelectionEnabled="True"
                Text="自动更新程序将删除JASM程序文件，然后从GitHub下载最新版本."
                TextWrapping="WrapWholeWords" />
            <TextBlock
                VerticalAlignment="Center"
                IsTextSelectionEnabled="True"
                Text="这意味着JASM文件夹中的所有文件都将被删除。JASM将所有个人设置存储在AppSettings或mod中."
                TextWrapping="WrapWholeWords" />
            <TextBlock
                Margin="0,8"
                IsTextSelectionEnabled="True"
                Style="{ThemeResource BodyStrongTextBlockStyle}"
                Text="如果在JASM文件夹中有mods文件夹或其他个人文件，请将它们移出，否则它们将被删除."
                TextWrapping="WrapWholeWords" />
            <CheckBox
                Margin="0,8"
                HorizontalAlignment="Left"
                Content="启用镜像加速"
                IsChecked="{x:Bind ViewModel.EnableMirrorAcceleration, Mode=TwoWay}"
                ToolTipService.ToolTip="从镜像下载JASM更新， 如果镜像不可用，请选择其他节点." />
            <StackPanel Visibility="{x:Bind ViewModel.EnableMirrorAcceleration, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{ThemeResource BodyStrongTextBlockStyle}"
                        Text="{x:Bind ViewModel.CurrentMirror.NodeName, Mode=OneWay}" />
                    <TextBlock VerticalAlignment="Center" Text="{x:Bind ViewModel.CurrentMirror.Latency, Mode=OneWay, Converter={StaticResource ToStringConverter}, ConverterParameter='延迟: {0}ms'}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button
                        HorizontalAlignment="Left"
                        Command="{x:Bind ViewModel.SwitchMirrorCommand}"
                        Content="切换镜像节点" />
                    <ProgressRing
                        Width="20"
                        Height="20"
                        IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
                <TextBlock
                    Margin="0,4"
                    HorizontalAlignment="Left"
                    Foreground="{x:Bind ViewModel.CurrentMirror.IsAvailable, Mode=OneWay, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Green|Red'}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="{x:Bind ViewModel.CurrentMirror.IsAvailable, Mode=OneWay, Converter={StaticResource BoolToStringConverter}, ConverterParameter='状态: {0}'}" />
            </StackPanel>
            <Button
                Margin="0,16,0,0"
                HorizontalAlignment="Center"
                Command="{x:Bind ViewModel.StartUpdateCommand}"
                Content="立即开始更新" />
        </StackPanel>



        <Grid VerticalAlignment="Top" Visibility="{x:Bind ViewModel.UpdateProcessStarted, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  标题行  -->
                <RowDefinition Height="Auto" />
                <!--  分段控件  -->
                <RowDefinition Height="Auto" />
                <!--  下载进度显示  -->
                <RowDefinition Height="Auto" />
                <!--  按钮区域  -->
                <RowDefinition Height="*" />
                <!--  日志列表  -->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,16,8,16"
                        HorizontalAlignment="Left"
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="正在更新到最新版本" />

                    <TextBlock
                        Margin="0,16,0,16"
                        HorizontalAlignment="Left"
                        Style="{ThemeResource TitleTextBlockStyle}"
                        Text="{x:Bind ViewModel.LatestVersion, Mode=OneWay}" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <HyperlinkButton
                        Margin="0,16,0,16"
                        HorizontalAlignment="Right"
                        NavigateUri="{x:Bind ViewModel.DefaultBrowserUri, Mode=OneWay}">
                        <HyperlinkButton.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0,0,4,0" Text="最新版本" />
                                <FontIcon Glyph="&#xE8A7;" />
                            </StackPanel>
                        </HyperlinkButton.Content>
                    </HyperlinkButton>
                    <ProgressRing
                        HorizontalAlignment="Right"
                        IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                        IsIndeterminate="True" />
                </StackPanel>
            </Grid>

            <controls:Segmented
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                IsItemClickEnabled="False"
                SelectionMode="Multiple">
                <controls:SegmentedItem
                    Content="检查最新版本"
                    IsHitTestVisible="False"
                    IsSelected="{x:Bind ViewModel.UpdateProgress.CheckingForLatestUpdate, Mode=OneWay}" />
                <controls:SegmentedItem
                    Content="下载最新版本"
                    IsHitTestVisible="False"
                    IsSelected="{x:Bind ViewModel.UpdateProgress.DownloadingLatestUpdate, Mode=OneWay}" />
                <controls:SegmentedItem
                    Content="解压下载文件"
                    IsHitTestVisible="False"
                    IsSelected="{x:Bind ViewModel.UpdateProgress.ExtractingLatestUpdate, Mode=OneWay}" />
                <controls:SegmentedItem
                    Content="正在安装更新"
                    IsHitTestVisible="False"
                    IsSelected="{x:Bind ViewModel.UpdateProgress.InstallingLatestUpdate, Mode=OneWay}" />
            </controls:Segmented>

            <Grid
                Grid.Row="2"
                Margin="0,16,0,0"
                Visibility="{x:Bind ViewModel.ShowDownloadProgress, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ProgressBar
                    Grid.Row="0"
                    Height="20"
                    Maximum="100"
                    Value="{x:Bind ViewModel.DownloadProgress, Mode=OneWay}" />
                <StackPanel
                    Grid.Row="1"
                    Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">
                    <TextBlock FontWeight="SemiBold" Text="{x:Bind ViewModel.DownloadStatus, Mode=OneWay}" />
                    <TextBlock Opacity="0.5" Text="|" />
                    <TextBlock Text="{x:Bind ViewModel.DownloadSpeed, Mode=OneWay}" />
                    <TextBlock Opacity="0.5" Text="|" />
                    <TextBlock Text="{x:Bind ViewModel.FileSize, Mode=OneWay}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="2"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Center"
                    Text="{x:Bind ViewModel.DownloadProgress, Mode=OneWay, Converter={StaticResource ToStringConverter}, ConverterParameter='{}{0:0}%'}" />
            </Grid>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  按钮区域  -->
                <Grid Grid.Row="0" Margin="0,16,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Command="{x:Bind ViewModel.StartUpdateCancelCommand}"
                        Content="取消"
                        Visibility="{x:Bind ViewModel.ShowCancelButton, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <Button
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Command="{x:Bind ViewModel.StartUpdateCommand}"
                        Content="重试"
                        Visibility="{x:Bind ViewModel.ShowRetryButton, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Background="{ThemeResource AccentFillColorSelectedTextBackgroundBrush}"
                        Command="{x:Bind ViewModel.StartJasmCommand}"
                        Content="启动 JASM..."
                        Visibility="{x:Bind ViewModel.FinishedSuccessfully, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>

                <InfoBar
                    Grid.Row="1"
                    IsClosable="False"
                    IsOpen="{x:Bind ViewModel.Stopped, Mode=OneWay}"
                    Message="{x:Bind ViewModel.StopReason, Mode=OneWay}"
                    Severity="Error"
                    Visibility="{x:Bind ViewModel.Stopped, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <ListView
                Grid.Row="4"
                Margin="0,8,0,0"
                ItemsSource="{x:Bind ViewModel.ProgressLog, Mode=OneWay}"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:LogEntry">
                        <Grid
                            Padding="2"
                            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                            BorderThickness="2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                HorizontalAlignment="Left"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind Message, Mode=OneWay}"
                                TextWrapping="WrapWholeWords" />
                            <TextBlock
                                Grid.Row="1"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind Footer, Mode=OneWay}"
                                TextWrapping="WrapWholeWords" />
                            <TextBlock
                                Grid.Row="2"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Right"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind TimeStamp, Mode=OneWay}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

    </Grid>
</Page>
